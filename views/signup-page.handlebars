{{> header}}

<main>
	<style>
		form {display: table;}
		p {display: table-row;}
		label {display: table-cell;}
		input {display: table-cell;}
	</style>

	
	<form name="signupForm" onsubmit="return validateSignupForm()" action="_newUserInsert" method="post">
		<p style="text-align:left;">
			<label for="fName">First Name:</label>
			<input type="text" name="fName" id="sfName">
		</p>
		<br>
		<p style="text-align:left;">
			<label for="lName">Last Name:</label>
			<input type="text" name="lName" id="slName">
		</p>
		<br>
		<p style="text-align:left;">
			<label for="Email">E-mail:</label>
			<input type="email" name="Email" id="sEmail">
		</p>
		<br>
		<p style="text-align:left;">
			<label for="username">Username:</label>
			<input type="text" name="username" id="susername">
		</p>
		<br>
		<p style="text-align:left;">
			<label for="password">Password:</label>
			<input type="password" name="password" id="spassword">
		</p>
		<br>
		<p style="text-align:left;">
			<label for="password"> Confirm Password:</label>
			<input type="password" name="confirm" id="sconfirm">
		</p>
		<br>

		
	<input type="submit" value="Submit">
	</form>

</main>

{{> footer}}
